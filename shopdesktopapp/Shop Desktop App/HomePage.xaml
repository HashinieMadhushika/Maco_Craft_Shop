<Window x:Class="Shop_Desktop_App.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop_Desktop_App"
        mc:Ignorable="d"
        Title="HomePage" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Background="#333" Width="200">
                <TextBlock Text="Maco Craft Admin" Foreground="White" FontSize="18" FontWeight="Bold" Margin="10"/>
                <Button Content="Dashboard" Margin="5" Padding="10" />
                <Button Content="Products" Margin="5" Padding="10" />
                <Button Content="Orders" Margin="5" Padding="10"/>
                <Button Content="Logout" Margin="5" Padding="10"/>
            </StackPanel>

            <!-- Content Area -->
            <Grid Background="White" Margin="10">
                <!-- Data Grid for Products -->
                <DataGrid x:Name="ProductsDataGrid" AutoGenerateColumns="True" Margin="10" />

                <!-- CRUD Operations -->
                <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="10">
                    <TextBox x:Name="txtProductName"   Margin="5" />
                    <TextBox x:Name="txtProductPrice"  Margin="5" />
                    <TextBox x:Name="txtCategory"  Margin="5" />
                    <TextBox x:Name="txtStock"  Margin="5" />
                    <Button Content="Add Product"  Margin="5" />
                    <Button Content="Update Product"  Margin="5" />
                    <Button Content="Delete Product"  Margin="5" />
                </StackPanel>
            </Grid>
        </DockPanel>
    </Grid>
</Window>

