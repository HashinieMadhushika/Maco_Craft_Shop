<Page x:Class="Shop_Desktop_App.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop_Desktop_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp">

    <Grid Background="#FFFCE7F3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Column="0" 
               Grid.Row="0" 
               Source="C:\Users\Hashinie\Desktop\Shop\Maco_Craft_Shop\shopfrontend\src\Images\bak5.jpg" 
               Stretch="UniformToFill" 
               Width="1200" Height="750">

        </Image>

        <StackPanel Grid.Column="1" Grid.Row="0" Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Create Account" FontSize="50" FontWeight="Bold" Margin="0,0,0,20"/>

            <RadioButton Content="User" GroupName="UserType" IsChecked="True" FontSize="24"/>
            <RadioButton Content="Admin" GroupName="UserType" FontSize="24" />

            <TextBlock Text="Enter your details : " FontSize="24" FontWeight="DemiBold"  Margin="0,20,0,10"/>

            <TextBlock Text="Enter your email :" FontSize="24"  Margin="0,0,0,0"/>
            <TextBox x:Name="txtEmail" FontSize="18" Margin="0,0,50,10" />

            <TextBlock Text="Enter your password :" FontSize="24"  Margin="0,0,0,0"/>
            <PasswordBox x:Name="pwdPassword"  FontSize="18" Margin="0,0,50,10" />

            <TextBlock Text="Enter your phone number :" FontSize="24"  Margin="0,0,0,0"/>
            <TextBox x:Name="pnphonenumber"  FontSize="18" Margin="0,0,50,10" />

            <Button Content="Sign Up" Width="100" Click="btnSignUp_Click" Background="#FF5F365F" Foreground="White" FontSize="24"/>
        </StackPanel>

    </Grid>
</Page>
