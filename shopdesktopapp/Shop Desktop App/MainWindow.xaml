<Window x:Class="Shop_Desktop_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Shop_Desktop_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="#FF5F365F"
        >
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Define grid structure -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Add background image -->
        <Image Grid.Column="0" Grid.Row="0" 
               Source="C:\Users\Hashinie\Desktop\Shop\Maco_Craft_Shop\shopfrontend\src\Images/bak3.jpg" 
               Stretch="UniformToFill" 
               Width="1100" Height="750" >
        </Image>


        <TextBlock Text="Maco Craft" FontSize="80" FontWeight="Bold" Foreground="#FF4A044E" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <TextBlock Text="Crafting joy, One stitch at a time." FontSize="60" FontWeight="Bold" Margin="0,500,10,20" Foreground="#5a2d82" HorizontalAlignment="Center"  />



        <!-- Add stack panel for login form -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="20" VerticalAlignment="Center" >
            <TextBlock Text="Welcome!" FontSize="60" FontWeight="Bold" Margin="0,0,0,20" />
            <TextBlock Text="Please enter your details" FontSize="18"  Margin="0,0,0,20" />

            <TextBlock Text="Enter your email : " FontSize="18"  Margin="0,0,0,0" />
            <TextBox x:Name="txtEmail"  Margin="0,0,0,20" />

            <TextBlock Text="Enter your password : " FontSize="18" Margin="0,0,0,0" />
            <PasswordBox x:Name="pwdPassword" Margin="0,0,0,10" />

            <Button x:Name="btnLogin" Content="Login" FontSize="18" Width="100" Margin="0,20,0,10" Click="btnLogin_Click" Background="#FFF3B5F3" />

            <TextBlock Text="Don't have an account?" FontSize="18"  Margin="0,10,0,5" />
            <Button x:Name="btnSignUp" FontSize="18"  Content="Sign Up" Width="100" Margin="0,20,0,10" Click="btnSignUp_Click" Background="#FFF3B5F3" Cursor="Hand" />
        </StackPanel>

        <!-- Add navigation frame -->
        <Frame x:Name="MainFrame" Grid.ColumnSpan="2" Grid.RowSpan="2" NavigationUIVisibility="Hidden" Navigated="MainFrame_Navigated" />
    </Grid>
</Window>
