<Window x:Class="MacoCraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacoCraft"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Define grid structure -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Add background image -->
        <Image Grid.Column="0" Grid.Row="0" 
               Source="F:\Computer Engineering Department\Web Development Project/bak1.jpg" 
               Stretch="UniformToFill" />

        <!-- Add stack panel for login form -->
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="20" VerticalAlignment="Center">
            <TextBlock Text="Welcome Back!" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" />
            <TextBlock Text="Please enter your details" Margin="0,0,0,20" />

            <TextBox x:Name="txtEmail"  Margin="0,20,0,10" />
            <PasswordBox x:Name="pwdPassword" Margin="0,10,0,20" />

            <CheckBox Content="Remember for 30 days" Margin="0,0,0,20" />

            <Button x:Name="btnLogin" Content="Login" Width="100" Margin="0,20,0,10" Click="btnLogin_Click" />

            <TextBlock Text="Don't have an account?" Margin="0,10,0,0" />
            <Button x:Name="btnSignUp" Content="Sign Up" Width="100" Click="btnSignUp_Click" />
        </StackPanel>

        <!-- Add navigation frame -->
        <Frame x:Name="MainFrame" Grid.ColumnSpan="2" Grid.RowSpan="2" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
